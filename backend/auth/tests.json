{
  "tests": [
    {
      "name": "Login with valid credentials",
      "method": "POST",
      "path": "/",
      "body": {
        "username": "admin",
        "password": "admin123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "token": "string",
        "username": "admin"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login with invalid credentials",
      "method": "POST",
      "path": "/",
      "body": {
        "username": "admin",
        "password": "wrongpassword"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "Invalid credentials"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login without credentials",
      "method": "POST",
      "path": "/",
      "body": {},
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Username and password required"
      },
      "bodyMatcher": "partial"
    }
  ]
}
